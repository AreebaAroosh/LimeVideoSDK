{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**/*.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            "_site/**"
          ],
          "cwd": "../dotnet"
        }
      ],
      "dest": "api",
         "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md",
           "api/api.md"
        ]
      },
      {
        "files": [
          "samples/**.md","samples/**/toc.yml",
           "reference/**.md","reference/**/toc.yml",
            "restapi/**.md","restapi/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**", "limelogo.svg","limefavicon.ico"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
     "globalMetadata": {
      "_appTitle": "The Lime Video SDK",
      "_enableSearch": true,
      "_appLogoPath": "limelogo.svg",
      "_appFaviconPath":"limefavicon.ico",
      "_appFooter":"Documentation License: <a href=https://creativecommons.org/licenses/by/4.0/>CC-BY</a>   -- Copyright Â© 2012-2016 Cameron Elliott"
    },
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default"
    ],
    "postProcessors": [],
    "noLangKeyword": false
  }
}