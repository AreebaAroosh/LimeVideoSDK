{
  "metadata": [
    {
      "src": [
        {
          "files": [ "**/*.sln" ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "cwd": "../dotnet"
        }
      ],
      "dest": "obj/api",
       "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "src": "obj/api",
        "dest": "api"
      },
      {
        "files": [ "{reference,samples,restapi}/**/*.{yml,md}" ]
      }
    ],
    "resource": [
      {
        "files": [ "articles/images/**"]
      }
    ],
    "overwrite": "specs/*.md",
    "globalMetadata": {
      "_appTitle": "docfx seed website",
      "_enableSearch": true,
      "_appFooter":"Documentation Licensed under the Apache License, Version 2.0  -- Copyright © 2012-2016 Cameron Elliott"
    },
 
    "dest": "_site"
  }
}


